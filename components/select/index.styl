@require('./variables.styl');

.k-select
    // FIXME 可变属性值，应该提取成变量
    width $select-wrapper-width
    display inline-block
    min-height $select-wrapper-height
    cursor pointer
    // FIXME 样式名尽量简短，k-input即可，无需再加select限定，因为前面k-select已经限定了命名空间
    .k-input
        font-size $select-input-font
        /* padding $select-padding */
        min-height $select-wrapper-height
        border 1px solid $disabled-border-color
        line-height $select-wrapper-height
        position relative
        &:hover
            border-color $selected-status
            /* box-shadow 0 0 0 2px rgba(45,140,240,.2)    */
    .k-icon
        position absolute
        top $select-icon-top
        right $select-icon-right
        margin-top $select-icon-m-t
        
    .k-icon-up
        border-left $select-icon-b-l
        border-right $select-icon-b-l
        border-top $select-icon-b-top
    .k-icon-down
        border-left $select-icon-b-l
        border-right $select-icon-b-l
        border-bottom $select-icon-b-top
    .disabled
        cursor not-allowed  
        border-color #d9d9d9 !important
        color $disabled-color
        bacground-color $disabled-bg-color
    .clear-icon
        float right
        position absolute
        right $select-input-font :=unit(14/14, rem) 
        top 0rem
        margin-right $select-icon-clear-m-r
        &:hover      
            color $selected-status
    .k-multiple
        display inline-block
        max-width $select-max-width
        .input-tag-checked
            display inline-block
            height $select-tag-checked-height
            line-height $select-tag-checked-height
            background #F0F2F9
            padding $selected-tag-checked-p
            margin $selceted-tag-checked-m
            border-radius $selected-tag-checked-border-radius  
    .input              
        border 0
        width $select-input-width
        height $select-wrapper-height
        padding-left $select-icon-m-r :=unit(6/14,rem)
.k-dropdown
    position absolute
    background #fff
    z-index 1000
    &.animate-enter
    &.animate-leave 
        opacity 0
        transform translateY(-1px)
    &.animate-enter-active
    &.animate-leave-active 
        transition: all 0.4s
    .k-list
        border 1px solid $disabled-border-color
        border-top $select-list-border-t
        .li-selected
            color $selected-status
            &:after
                content "\2713"
                position absolute
                right $select-icon-yes
                witdh 100%

        .li-disabled
            background-color $disabled-bg-color
            color $disabled-color
            cursor not-allowed
        .li-label
            float right    
            margin-right $select-li-label-m-r
        .li-group-label
            padding $select-li-group-label    
        li
            padding $select-li-margin
            border-top $select-list-border-t 
            font-size $select-li-font-size
            &:hover    
                background #f8f8f9

