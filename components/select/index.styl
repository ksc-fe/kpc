    .disabled
        cursor not-allowed  
        border-color #d9d9d9 !important
        color $disabled-color
        bacground-color $disabled-bg-color
    .clear-icon
        float right
        position absolute
        right $select-input-font :=unit(14/14, rem) 
        top 0rem
        margin-right $select-icon-clear-m-r
        &:hover      
            color $selected-status 
    .k-multiple
        display inline-block
        max-width $select-max-width
        .input-tag-checked
            display inline-block
            height $select-tag-checked-height
            line-height $select-tag-checked-height
            background #F0F2F9
            padding $selected-tag-checked-p
            margin $selceted-tag-checked-m
            border-radius $selected-tag-checked-border-radius  
    .input              
        border 0
        width $select-input-width
        height $select-wrapper-height
        padding-left $select-icon-m-r :=unit(6/14,rem)
.k-select-disabled &:hover 
        cursor not-allowed !important
