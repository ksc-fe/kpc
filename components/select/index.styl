.k-dropdown
    position absolute
    background #fff
    z-index 1000
    &.animate-enter
    &.animate-leave 
        opacity 0
        transform translateY(-10px)
    &.animate-enter-active
    &.animate-leave-active 
        transition: all 0.6s
    .k-list
        /* border 1px solid $disabled-border-color */
        box-shadow 0 1px 5px rgba(0,0,0,.2)
        border-top $select-list-border-t
        .li-selected
            color $selected-status
            &:after
                content "\2713"
                position absolute
                right $select-icon-yes
                witdh 100%
        .li-label
            float right    
            margin-right $select-li-label-m-r
        
        li
            padding $select-li-margin
            border-top $select-list-border-t 
            font-size $select-li-font-size
            &:hover    
                background #0a5eee
                color #fff
                cursor pointer
        .li-group-label
            padding $select-li-group-label  
            background #f8f8f9
            &:hover     
                cursor text     
                background #f8f8f9
                color #595959  
        .li-disabled
            background-color $disabled-bg-color
            color $disabled-color
            &:hover
                cursor not-allowed
                background #f8f8f9
                color #595959  
