@require('./variables.styl')


.k-slider
    position relative
    display flex
    .k-wrapper
        height $slider-height
        background-color $slider-color
        border-radius $slider-height
        cursor pointer
        position relative
        display inline-block
        flex 1
        user-select none
        .k-box
            position absolute
            top $slider-height
            padding $slider-box-padding
            width 100%
            :last-child
                float right
        .k-bar
            background-color $slider-bar-color
            position absolute
            height 100%
            border-radius $slider-height
            transition all $transition 
        .k-button-wrapper
            height $slider-button-height
            width @height
            position absolute
            transform translateX(-50%)
            top $slider-button-top
            text-align center
            transition all $transition 
        .k-button
            width 100%
            height 100%
            border 2px solid $slider-bar-color
            border-radius 50%
            background-color #fff
            transition all $transition 
            &:hover
                transform scale(1.5)
                cursor -webkit-grab
                cursor -moz-grab
                background-color $slider-bar-color
        .k-text
            width 100%
            height 100%
            top $slider-button-top
            position absolute
            color $slider-bar-color
    &.k-dragging
        .k-bar
            transition none
        .k-button-wrapper
            transition none
        .k-button
            transition none
        .k-active
            .k-button
                cursor -webkit-grabbing
                transform scale(1.5)
                background-color $slider-bar-color

    &.k-slider-input
        .k-input-wrapper
            float right
            margin-top -0.75rem
            margin-left $slider-margin
    &.k-disabled
        .k-wrapper
            cursor not-allowed
        .k-bar
            background-color $slider-disabled-color
        .k-button
            border-color $slider-disabled-color
            &:hover
                background-color #fff
                cursor not-allowed
                transform none

@import $theme-dir + '/slider.styl' if exists($theme-dir + '/slider.styl') 
