/****************************
            Reset
*****************************/

*, *:before, *:after
    box-sizing inherit
html
    box-sizing border-box

// iPad Input Shadows
input
    -webkit-appearance none
    -moz-appearance none
    color $text-color
::-ms-clear
    display none

ul, ol, li
    list-style none
    margin 0
    padding 0

input:focus
select:focus
    outline none
::placeholder
    color $placeholder-color


/****************************
            Page
*****************************/

html
body
    height 100%
    line-height $line-height
#app
    min-height 100%
html
    font-size unit($rem, px)
body
    font-size $font-size 
    font-family $font-family
    margin 0
    padding 0
    color $text-color


/****************************
            Headers
*****************************/

h1, h2, h3, h4, h5
    font-family $header-font-family
    margin $header-margin
    font-weight $header-font-weight
    padding 0
h1
    min-height unit(14 / $rem, rem)
for type in 1 2 3 4 5
    h{type}
        font-size lookup('$h' + type)
    h{type}:first-child
        margin-top 0
    h{type}:last-child
        margin-bottom 0


/****************************
            Link
*****************************/

a 
    color $link-color
    text-decoration $link-underline
    cursor pointer
    outline none
    &:hover
        color $link-hover-color
        text-decoration $link-hover-underline


/****************************
            Code 
*****************************/

code, kbd, pre, samp
    font-family $code-font-family

/****************************
           Tap Highlight 
*****************************/

label
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)

requireTheme('reset')
